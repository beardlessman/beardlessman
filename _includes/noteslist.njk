<ul class="noteslist">
{% for post in pagination.items %}
  <li class="noteslist-item">
    <a href="{{ post.url | url }}" class="noteslist-link">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
    <time class="noteslist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
    {% for tag in post.data.tags %}
      {%- if collections.tagList.indexOf(tag) != -1 -%}
      {% set tagUrl %}/tags/{{ tag }}/{% endset %}
      <a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    <div class="noteslist-content">{{ post.templateContent | safe }}</div>
  </li>
{% endfor %}
</ul>

{% include 'pages.njk' %}
